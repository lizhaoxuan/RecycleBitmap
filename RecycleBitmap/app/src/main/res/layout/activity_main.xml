<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.zhaoxuan.example.MainActivity">

    <Button
        android:id="@+id/takePhotoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通拍照" />

    <Button
        android:id="@+id/takePhotoRecycleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用RecycleBitmap拍照" />

    <Button
        android:id="@+id/seeBigBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通查看大图" />

    <Button
        android:id="@+id/seeBigRecycleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用RecycleBitmap查看大图" />

    <Button
        android:id="@+id/viewPagerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通ViewPager" />

    <Button
        android:id="@+id/viewPagerRecycleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用RecycleBitmap ViewPager" />

</LinearLayout>
